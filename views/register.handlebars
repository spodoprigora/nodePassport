<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Registration Details</h1>
            <div class="signup-wall">
                <form action="/signup" class="form-signin" method="POST">
                    <input type="text" name="username" class="form-control" placeholder="Username" required autocomplete="off" value="">
                    <input type="password" name="password" class="form-control nomargin" placeholder="Password" required autocomplete="off" value="">
                    <input type="email" name="email" class="form-control" placeholder="Email" required>
                    <input type="text" name="firstName" class="form-control" placeholder="First Name" required>
                    <input type="text" name="lastName" class="form-control" placeholder="Last Name" required>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
                    <span class="clearfix"></span>
                </form>
                <h1 class="text-center error-message">{{message}}</h1>
            </div>
        </div>
    </div>
</div>